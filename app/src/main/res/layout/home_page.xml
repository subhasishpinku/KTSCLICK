                                android:layout_marginLeft="100sp"
                                android:layout_below="@+id/avalbalance"
                                android:layout_marginTop="5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/logo"
                                    android:layout_width="30sp"
                                    android:layout_height="30sp"
                                    android:layout_below="@+id/avalbalance"
                                    android:layout_toLeftOf="@+id/blanceview"
                                    android:background="@drawable/avlbal" />
                                <TextView
                                    android:id="@+id/blanceview"
                                    android:layout_marginTop="3sp"
                                    android:layout_marginLeft="10sp"
                                    android:layout_below="@+id/avalbalance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/rupeess"
                                    android:text="hello"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"/>
                                <ImageView
                                    android:id="@+id/reload_bal"
                                    android:layout_marginTop="3sp"
                                    android:layout_marginLeft="10sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/avalbalance"
                                    android:layout_toLeftOf="@+id/blanceview"
                                    android:background="@drawable/ic_baseline_forward_10_24" />
                            </LinearLayout>

