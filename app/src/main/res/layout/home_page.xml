                        </RelativeLayout>

<!--                    </androidx.cardview.widget.CardView>-->
                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:id="@+id/lv"
            android:layout_below="@+id/lvv"
            android:background="@drawable/border2"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="left"
                android:visibility="visible"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:text="Collect a Payment"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:clipToPadding="false"
                android:id="@+id/card_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_below="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"/>
            <LinearLayout
                android:id="@+id/SliderDots"
                android:layout_below="@+id/viewPager"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/lv1"
            android:layout_below="@+id/SliderDots"
            android:background="@drawable/border2"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="left"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:text="Banking &amp; Savings"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center"
                android:clipToPadding="false"
                android:id="@+id/recycler_banking_saving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/lv2"
                android:layout_below="@+id/lv1"
                android:background="@drawable/border2"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center"
                    android:clipToPadding="false"
                    android:id="@+id/recycler_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/lv3"
                android:layout_below="@+id/lv2"
                android:background="@drawable/border2"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:gravity="left"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:text="Utility,EMI &amp; Entertainment"
                    android:layout_height="wrap_content" />
                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center"
                    android:clipToPadding="false"
                    android:id="@+id/recycler_entertainment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/lv4"
                android:layout_below="@+id/lv3"
                android:background="@drawable/border2"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:gravity="left"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:text="Insurance"
                android:layout_height="wrap_content" />
                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center"
                    android:clipToPadding="false"
                    android:id="@+id/recycler_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/lv5"
                android:layout_below="@+id/lv4"
                android:background="@drawable/border2"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:gravity="left"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:text="Shop Owner Benefits"
                    android:layout_height="wrap_content" />
                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center"
                    android:clipToPadding="false"
                    android:id="@+id/recycler_shopowner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/lv6"
                android:layout_below="@+id/lv5"
                android:background="@drawable/border2"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="50sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:gravity="left"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:text="Travel"
                    android:layout_height="wrap_content" />
                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center"
                    android:clipToPadding="false"
                    android:id="@+id/recycler_travel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lv7"
                android:layout_below="@+id/lv6"
                android:background="@drawable/border2"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50sp"
                android:orientation="vertical">
                <TextView
                    android:gravity="left"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:text="Earn More"
                    android:layout_height="wrap_content" />
                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center"
                    android:clipToPadding="false"
                    android:id="@+id/recycler_earnmore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:text="title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/white"
        android:foreground="?attr/selectableItemBackground"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/navigation" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>