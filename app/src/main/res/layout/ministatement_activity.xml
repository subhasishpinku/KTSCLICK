<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MobileRechargeActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="1dp"
            app:cardCornerRadius="0dp"
            android:layout_margin="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/lv"
                    android:background="@color/carview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/Img"
                            android:layout_marginTop="10sp"
                            android:layout_marginLeft="20sp"
                            android:background="@drawable/ic_arrow_circle_left"
                            android:layout_width="30sp"
                            android:layout_height="30sp"/>
                        <TextView
                            android:id="@+id/tv"
                            android:layout_marginLeft="10sp"
                            android:text="Bill Payments"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_alignBaseline="@+id/Img"
                            android:layout_toRightOf="@+id/Img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/balance"
                            android:layout_marginLeft="10sp"
                            android:layout_below="@+id/tv"
                            android:text="Wallet: 22.53"
                            android:layout_marginTop="2sp"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/rupeess"
                            android:textSize="15sp"
                            android:layout_alignBaseline="@+id/Img"
                            android:layout_toRightOf="@+id/Img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


<!--                        <ImageView-->
<!--                            android:id="@+id/Img1"-->
<!--                            android:visibility="visible"-->
<!--                            android:layout_alignParentEnd="true"-->
<!--                            android:layout_marginTop="5sp"-->
<!--                            android:background="@drawable/ic_alerts"-->
<!--                            android:layout_width="30sp"-->
<!--                            android:layout_marginRight="70sp"-->
<!--                            android:layout_height="30sp"/>-->
                        <ImageView
                            android:id="@+id/Img2"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/ic_cancel_second"
                            android:layout_width="30sp"
                            android:layout_height="30sp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lvv"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/lv"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:backgroundTint="@null"
                        android:text="Select macine" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_below="@+id/lvv"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="visible"
                        android:gravity="center"
                        android:layout_marginTop="5sp"
                        android:id="@+id/rcv_mechine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                               </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:backgroundTint="@color/carview"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_black_24dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout >
