<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="1dp"
            app:cardCornerRadius="0dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lv"
                    android:background="@color/carview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/Img"
                            android:layout_marginTop="10sp"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="20sp"
                            android:background="@drawable/ic_arrow_circle_left" />
                        <!--                    android:background="@drawable/dth"-->
                        <TextView
                            android:id="@+id/tv_nmaebrand"
                            android:layout_marginLeft="10sp"
                            android:text="Mini Statement"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_alignBaseline="@+id/Img"
                            android:layout_toRightOf="@+id/Img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/balance"
                            android:layout_below="@+id/tv_nmaebrand"
                            android:text="Wallet: 22.53"
                            android:layout_marginTop="2sp"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/rupeess"
                            android:textSize="15sp"
                            android:layout_alignBaseline="@+id/Img"
                            android:layout_toRightOf="@+id/Img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <ImageView
                            android:id="@+id/Img2"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:background="@drawable/ic_cancel_second"
                            android:layout_width="30sp"
                            android:layout_height="30sp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llv"
                    android:background="#eae9e7"
                    android:layout_marginTop="20sp"
                    android:layout_below="@+id/lv"
                    android:layout_width="match_parent"
                    android:layout_height="100sp">
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_marginLeft="15dp"
                            android:text="Name :"
                            android:layout_marginTop="10sp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_name2"
                            android:layout_toRightOf="@id/tv_name"
                            android:layout_marginLeft="15dp"
                            android:text="Arobind Rao"
                            android:layout_marginTop="10sp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_bankname"
                            android:layout_marginTop="5sp"
                            android:layout_below="@+id/tv_name"
                            android:layout_marginLeft="15dp"
                            android:text="STATE BANK OF INDIA"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_adher"
                            android:layout_marginTop="5sp"
                            android:layout_below="@+id/tv_bankname"
                            android:layout_marginLeft="15dp"
                            android:text="Aadhaar No :"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_adher_no"
                            android:layout_marginTop="5sp"
                            android:layout_toRightOf="@id/tv_adher"
                            android:layout_alignBaseline="@+id/tv_adher"
                            android:layout_marginLeft="10dp"
                            android:text="452967840134"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_mobileno"
                            android:layout_marginTop="5sp"
                            android:layout_below="@+id/tv_adher"
                            android:layout_marginLeft="15dp"
                            android:text="Mobile No :"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_mobile_no"
                            android:layout_marginTop="5sp"
                            android:layout_toRightOf="@id/tv_mobileno"
                            android:layout_alignBaseline="@+id/tv_mobileno"
                            android:layout_marginLeft="10dp"
                            android:text="8926712304"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lllv"
                    android:background="#eae9e7"
                    android:layout_marginTop="20sp"
                    android:layout_below="@+id/llv"
                    android:layout_width="match_parent"
                    android:layout_height="100sp">
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_view"
                            android:layout_marginTop="20sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_gravity="center"
                            android:background="@drawable/scanner_finger"
                            android:layout_width="40sp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/tv_text"
                            android:layout_marginTop="20sp"
                            android:layout_toRightOf="@id/img_view"                            android:layout_marginLeft="15dp"
                            android:text="Give your Thumb Impression"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_text1"
                            android:layout_marginTop="5sp"
                            android:layout_below="@+id/tv_text"
                            android:layout_toRightOf="@id/img_view"                            android:layout_marginLeft="15dp"
                            android:text="Place your finger properly to complete your Transaction"
                            android:textSize="12sp"
                            android:textColor="#767475"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llvv"
                    android:layout_marginTop="20sp"
                    android:layout_below="@+id/lllv"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="15dp"
                        android:text="I hereby give my voluntary consent to use my Aadhaar/VID number &amp; biometric to
authenticate from UIDAI for the purpose of Aadhaar endabled transaction"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkBox2" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="bottom"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="10sp"
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#ffffff"
            app:backgroundTint="@null"
            android:background="@drawable/roundedbutton"
            android:text="Scan Finger" />
    </RelativeLayout>
</RelativeLayout>
