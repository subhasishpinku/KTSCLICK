<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            card_view:ignore="RtlCompat" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="60sp"
                android:id="@+id/tvId2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:text=" New Agency Registration"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agency Name"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="18sp"
                style="@style/Normal_Drawable" />
            <EditText
                android:id="@+id/agName"
                android:layout_weight="1"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="10sp"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:inputType="textWebEmailAddress"
                android:paddingLeft="5sp"
                android:hint="  Agency Name"
                android:background="@drawable/rounded_edittext"/>
            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Name"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="18sp"
                style="@style/Normal_Drawable" />
            <EditText
                android:id="@+id/loginName"
                android:layout_weight="1"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="10sp"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:inputType="textWebEmailAddress"
                android:paddingLeft="5sp"
                android:hint="  Agency Name"
                android:background="@drawable/rounded_edittext"/>
            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/nameId"
                    android:layout_weight="1"
                    android:layout_marginLeft="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:inputType="textWebEmailAddress"
                    android:paddingLeft="5sp"
                    android:hint="  Enter First Name"
                    android:background="@drawable/rounded_edittext"/>
                <TextView
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    />
                <EditText
                    android:id="@+id/lastnameId"
                    android:layout_weight="1"
                    android:layout_marginLeft="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:inputType="textWebEmailAddress"
                    android:paddingLeft="5sp"
                    android:hint="  Enter Last Name"
                    android:background="@drawable/rounded_edittext"/>
                <TextView
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    />
                <EditText
                    android:id="@+id/emailId"
                    android:layout_marginTop="15sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:inputType="textWebEmailAddress"
                    android:paddingLeft="5sp"
                    android:hint="  Email"
                    android:background="@drawable/rounded_edittext"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/phoneId"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:maxLength="10"
                android:inputType="number"
                android:paddingLeft="5sp"
                android:hint="  Phone"
                android:background="@drawable/rounded_edittext"/>

            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="18sp"
                style="@style/Normal_Drawable"
                />
            <LinearLayout
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/addresId"
                    android:layout_weight="1"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:inputType="textWebEmailAddress"
                    android:paddingLeft="5sp"
                    android:hint="  Address"
                    android:background="@drawable/rounded_edittext"/>
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pan"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    style="@style/Normal_Drawable"
                    />
                <EditText
                    android:id="@+id/panId"
                    android:layout_weight="1"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:inputType="textWebEmailAddress"
                    android:paddingLeft="5sp"
                    android:hint="  Pan"
                    android:background="@drawable/rounded_edittext"/>
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    style="@style/Normal_Drawable"
                    />
                <EditText
                    android:id="@+id/passId"
                    android:layout_weight="1"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:inputType="textWebEmailAddress"
                    android:paddingLeft="5sp"
                    android:hint="  Password"
                    android:background="@drawable/rounded_edittext"/>

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    style="@style/Normal_Drawable"
                    />
                <EditText
                    android:id="@+id/conPass"
                    android:layout_weight="1"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:inputType="textWebEmailAddress"
                    android:paddingLeft="5sp"
                    android:hint="  Confirm Password"
                    android:background="@drawable/rounded_edittext"/>
            </LinearLayout>
            <Button
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="5sp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:id="@+id/nextId_Agen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#ffffff"
                app:backgroundTint="@null"
                android:background="@drawable/roundedbutton"
                android:text="Submit" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>