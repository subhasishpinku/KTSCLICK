<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MobileRechargeActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="1dp"
            app:cardCornerRadius="0dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/lv"
                    android:background="@color/carview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/Img"
                            android:layout_marginTop="10sp"
                            android:layout_marginLeft="20sp"
                            android:background="@drawable/dth"
                            android:layout_width="30sp"
                            android:layout_height="30sp"/>
                        <TextView
                            android:id="@+id/tv"
                            android:layout_marginLeft="10sp"
                            android:text="Mobile Recharge"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_alignBaseline="@+id/Img"
                            android:layout_toRightOf="@+id/Img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/balance"
                            android:layout_below="@+id/tv"
                            android:text="Wallet: 22.53"
                            android:layout_marginTop="2sp"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/rupeess"
                            android:textSize="15sp"
                            android:layout_alignBaseline="@+id/Img"
                            android:layout_toRightOf="@+id/Img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <ImageView
                            android:id="@+id/Img2"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:background="@drawable/ic_cancel"
                            android:layout_width="30sp"
                            android:layout_height="30sp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="50sp"
                    android:layout_below="@+id/lv"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/CustomDropDownTilStyle"
                        app:boxBackgroundColor="@color/white"
                        android:layout_weight="1"
                        android:hint="Current Operator">
                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/OperatorId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="20sp"
                        style="@style/CustomDropDownTilStyle"
                        app:boxBackgroundColor="@color/white"
                        android:layout_weight="1"
                        android:hint="Circle">
                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/circle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="20sp"

                        android:id="@+id/boothId"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mobileno"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/carview"
                            android:singleLine="true"
                            android:hint="Subscriber ID"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="20sp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/amountId"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/carview"
                            android:singleLine="true"
                            android:hint="Enter Amount"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <Button
            android:layout_marginRight="80sp"
            android:layout_marginLeft="200sp"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:id="@+id/dtnrecharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#ffffff"
            app:backgroundTint="@null"
            android:background="@drawable/square"
            android:text="proceed" />

    </LinearLayout>
</RelativeLayout>
